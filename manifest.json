{
    "manifest_version": 2,
    "name": "YouTube Ad Skipper",
    "version": "1.1",
    "permissions": [
        "tabs",
        "activeTab",
        "https://www.youtube.com/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_title": "Skip YouTube Ads"
    }
}
